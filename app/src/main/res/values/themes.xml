<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="GreenTheme">
        <item name="colorPrimary">@color/colorPrimary_GREEN</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_GREEN</item>
        <item name="colorAccent">@color/colorAccent_GREEN</item>
        <item name="android:windowBackground">@color/colorLightPrimary_GREEN</item>
    </style>

    <style name="PinkTheme">
        <item name="colorPrimary">@color/colorPrimary_PINK</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_PINK</item>
        <item name="colorAccent">@color/colorAccent_PINK</item>
        <item name="android:windowBackground">@color/colorLightPrimary_PINK</item>
    </style>

    <style name="PurpleTheme">
        <item name="colorPrimary">@color/colorPrimary_PURPLE</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_PURPLE</item>
        <item name="colorAccent">@color/colorAccent_PURPLE</item>
        <item name="android:windowBackground">@color/colorLightPrimary_PURPLE</item>
    </style>

    <style name="DarkTheme">
        <item name="colorPrimary">@color/colorPrimary_BLUE</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_BLUE</item>
        <item name="colorAccent">@color/colorAccent_DARK</item>
        <item name="android:windowBackground">@color/colorLightPrimary_DARK</item>
        <item name="android:tint">@color/colorTextIcon</item>
<!--        <item name="android:textColor">@color/colorTextIcon</item>-->
    </style>


</resources>